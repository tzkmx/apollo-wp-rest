{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "standard-with-typescript"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-var-requires": 0,
        "@typescript-eslint/prefer-ts-expect-error": 0,
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "all",
                "ignoreRestSiblings": true,
                "argsIgnorePattern": "^_",
                "caughtErrors": "none"
            }
        ],
        "camelcase": "warn",
        "no-var": "error",
        "prefer-const": ["error", {
            "destructuring": "any"
        }]
    }
}